@model Tour

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
    <img src="@Model.ImageThumbnailUrl" alt="">
        <div class="caption">
            <h4 class="pull-right">@Model.Price.ToString("c")</h4>
            <h3><a asp-controller="Tours"
                   asp-action="Details"
                   asp-route-id="@Model.TourId">@Model.Name</a></h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="TourCart"
                        asp-action="AddToTourCart"
                        asp-route-tourId="@Model.TourId">Add to Cart</a>
            </p>
        </div>
    </div>
</div>