@model Tour

<div class="thumbnail">
    <img src="@Model.ImageUrl" alt="@Model.Name">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3><a href="#">@Model.Name</a></h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
        <p class="button">
            <a class="btn btn-primary" asp-controller="TourCart" 
                asp-action="AddToTourCart" asp-route-tourId="@Model.TourId">Add To Cart</a>
        </p>
    </div>
</div>