@model LoginViewModel

<h2>Log in to place an order</h2>

<form class="form-horizontal" asp-controller="Account" asp-action="Login" method="post" role="form">
    <h4>Fill in your details</h4>
    <hr/>
    <input type="hidden" asp-for="ReturnUrl"/>
    <div class="text-danger" asp-validation-summary="All">

    </div>
    <div class="form-group">
        <label class="col-md-2 contol-label" asp-for="UserName"></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="UserName">
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 contol-label" asp-for="Password"></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Log In"/>
        </div>
    </div>
</form>